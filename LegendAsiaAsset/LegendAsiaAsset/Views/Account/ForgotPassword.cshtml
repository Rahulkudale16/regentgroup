@model LegendAsiaAsset.Models.UserDetails
<script src="~/js/ForgotPassword.js" asp-append-version="true"></script>
@{
    Layout = null;
    ViewData["Title"] = "Forgot Password";
}

<head>
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="shortcut icon" type="image/x-icon" href="~/image/Star.png">
    <title>Legend Asia | Forgot Password</title>
</head>

<body>
    <div class="row">
        <h1>Forgot your password?</h1>
        <hr>
        <h3>Enter your email address to reset your password</h3>
    </div>

    <div id="Dabba">
        <div class="row justify-content-center">
            <div class="input-field" id="EmailIDLogin">
                <i class="fa-solid fa-user"></i>
                @Html.AntiForgeryToken()
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form__input", placeholder = "Enter your Email Address", @id = "EmailIDOTP" } })
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="input-field" id="NewPassLogin">
                <i class="fa-solid fa-user"></i>
                @Html.AntiForgeryToken()
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form__input", placeholder = "New Password", @id = "NewEnterOTP" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger text-start" })
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="input-field" id="RetypeNewPassLogin">
                <i class="fa-solid fa-user"></i>
                @Html.AntiForgeryToken()
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form__input", placeholder = "ReEnter New Password", @id = "ReEnterOTP" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger text-start" })
            </div>
        </div>
        <div class="row justify-content-center">
            <form class="form-card" id="Otpview">
                <div class="form-card-input-wrapper">
                    <input class="form-card-input" placeholder="______" maxlength="6" type="tel" id="OTPField">
                    <div class="form-card-input-bg"></div>
                </div>
            </form>
        </div>
    </div>
    <div class="row justify-content-center mb-1" style="text-align:center;">
        <h6 id="EmailIDW" class="text-danger">Enter proper email ID!!!</h6>
    </div>
    <div class="row justify-content-center mb-1" style="text-align:center;">
        <h6 id="EmailIDW1" class="text-success">OTP Failed!!!</h6>
    </div>
    <div class="row justify-content-center mb-1" style="text-align:center;">
        <h6 id="EmailIDW2" class="text-danger">
            Email should not be empty.
            !!!
        </h6>
    </div>
    <div class="row justify-content-center" style="text-align:center;">
        <h6 id="OTPW" class="text-danger">Enter Valid OTP!!!</h6>
    </div>
    <div class="row justify-content-center" style="text-align:center;">
        <h6 id="PasswordW" class="text-danger">Both Password Should be Same!!!</h6>
    </div>
    <div class="row justify-content-center" style="text-align:center;">
        <h6 id="PasswordW1" class="text-danger">Error While Resetting the password!!!</h6>
    </div>
    <div class="row justify-content-center">
        <div class="col-1 mt-2">
            <a class="OTPbtn" id="OTP" style="text-align:center;">OTP</a>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-1 mt-2">
            <a class="OTPbtn" id="OTP1" style="text-align:center;">OTP</a>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-1">
            <a class="Verifybtn">Verify</a>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-1">
            <a class="Enterbtn">Enter</a>
        </div>
    </div>

    <script src="~/lib/jquery/jquery.min.js" type="text/javascript"></script>
    <script src="~/lib/jqueryui/jquery-ui.min.js" type="text/javascript"></script>
    <script src="~/js/ForgotPassword.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>

